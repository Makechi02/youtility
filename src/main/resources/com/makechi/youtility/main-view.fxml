<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.makechi.youtility.MainController">
	<Label alignment="CENTER" prefHeight="45.0" prefWidth="600.0" text="Youtility">
		<font>
			<Font name="JetBrainsMono NF ExtraBold" size="25.0" />
		</font>
	</Label>
	<Label alignment="CENTER" layoutY="70.0" prefHeight="30.0" prefWidth="600.0" text="Paste the video URL here:">
		<font>
			<Font name="JetBrainsMono NF Regular" size="13.0" />
		</font>
	</Label>
	<TextField fx:id="urlField" layoutX="10.0" layoutY="100.0" prefHeight="30.0" prefWidth="580.0">
		<font>
			<Font name="JetBrainsMono NF Regular" size="14.0" />
		</font>
	</TextField>
	<Label alignment="CENTER" layoutY="150.0" prefHeight="30.0" prefWidth="600.0" text="Choose format:">
		<font>
			<Font name="JetBrainsMono NF Regular" size="13.0" />
		</font>
	</Label>
	<HBox alignment="CENTER" layoutX="14.0" layoutY="356.0" prefHeight="30.0" prefWidth="574.0">
		<Button mnemonicParsing="false" onAction="#handleDownload" text="Download">
			<font>
				<Font name="JetBrainsMono NF Bold" size="14.0" />
			</font>
		</Button>
	</HBox>
	<ComboBox fx:id="formatBox" layoutX="10.0" layoutY="180.0" prefHeight="30.0" prefWidth="580.0" />
   <ProgressBar fx:id="progressBar" layoutX="10.0" layoutY="245.0" prefHeight="15.0" prefWidth="580.0" progress="0.0" />
   <Label fx:id="statusLabel" alignment="CENTER" layoutX="10.0" layoutY="275.0" prefWidth="580.0">
      <font>
         <Font name="JetBrainsMono NF Regular" size="13.0" />
      </font>
   </Label>
</AnchorPane>
